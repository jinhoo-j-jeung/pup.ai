<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_marginTop="15sp">

    <ImageView
      android:id="@+id/iv_breed_pic"
      android:layout_width="match_parent"
      android:layout_height="200sp"
      android:contentDescription="@string/cd_info_image"/>

    <ImageView
      android:id="@+id/bt_add_fav"
      android:src="@drawable/fav_icon"
      android:layout_width="50sp"
      android:layout_height="50sp"
      android:layout_marginLeft="15sp"
      android:onClick="addFavorite"
      android:background="@drawable/round_button_secondary"
      android:contentDescription="@string/cd_info_favbutton"
      android:layout_marginStart="15sp"/>

    <TextView
      android:id="@+id/tv_breed_name"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/tv_breed_group"

      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:gravity="center_horizontal"
      android:textColor="@color/colorSecondaryAlpha80"
      android:textSize="20sp"
      tools:ignore="SelectableText"/>

    <TextView
      android:id="@+id/tv_breed_group"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:gravity="center_horizontal"
      android:textColor="@color/colorSecondaryAlpha80"
      android:textSize="20sp"
      tools:ignore="SelectableText"/>

  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7sp"
    android:layout_marginBottom="7sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_breed_height"
      android:layout_width="150sp"
      android:layout_height="wrap_content"
      android:layout_marginRight="20sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginEnd="20sp"/>
    <TextView
      android:id="@+id/tv_breed_height2"
      android:layout_width="160sp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginStart="10sp"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_breed_weight"
      android:layout_width="150sp"
      android:layout_height="wrap_content"
      android:layout_marginRight="20sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginEnd="20sp"/>
    <TextView
      android:id="@+id/tv_breed_weight2"
      android:layout_width="160sp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginStart="10sp"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_breed_lifespan"
      android:layout_width="150sp"
      android:layout_height="wrap_content"
      android:layout_marginRight="20sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginEnd="20sp"/>
    <TextView
      android:id="@+id/tv_breed_lifespan2"
      android:layout_width="160sp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10sp"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/colorPrimary"
      tools:ignore="SelectableText"
      android:layout_marginStart="10sp"/>
  </LinearLayout>

  <ListView
    android:id="@+id/lv_breed_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="@null"
    android:dividerHeight="0dp" />

  <TextView
    android:id="@+id/tv_breed_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:textSize="30sp"
    android:textColor="@color/colorPrimary"
    android:visibility="invisible"/>

</LinearLayout>