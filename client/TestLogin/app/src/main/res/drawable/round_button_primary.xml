<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_focused="true" >
    <shape>
        <stroke android:width="1dp" android:color="@color/colorSecondaryAlpha60" />

        <solid android:color="@color/colorSecondaryAlpha60" />
        <corners
            android:bottomLeftRadius="8dp"
            android:bottomRightRadius="8dp"
            android:topLeftRadius="8dp"
            android:topRightRadius="8dp" />
    </shape>
</item>

<item android:state_focused="false" >
    <shape>
    <stroke android:width="1dp" android:color="@color/colorPrimaryAlpha60" />

    <solid android:color="@color/colorPrimaryAlpha60" />
    <corners
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp" />
</shape></item>
</selector>